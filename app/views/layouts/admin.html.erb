<!DOCTYPE html>
<html>
  <head>
    <title>Admin</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "administrate/application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "administrate/application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>
    <header style="display:flex;justify-content:flex-end;padding:12px 16px;border-bottom:1px solid #e5e7eb;">
      <%= button_to "Logout", admin_logout_path, method: :delete, style: "background:#dc2626;color:#fff;border:none;border-radius:6px;padding:8px 12px;cursor:pointer;" %>
    </header>
    <%= yield %>
  </body>
</html>
